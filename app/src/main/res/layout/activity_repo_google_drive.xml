<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/activity_repo_google_drive_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/screen_edge"
                android:orientation="vertical"
                tools:context=".android.ui.main.MainActivity">

                <!-- Link/unlink button. -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="@dimen/space_between_content_areas"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/activity_repo_google_drive_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="?attr/oic_dropbox_not_linked"
                        android:contentDescription="@string/google_drive" />

                    <Button
                        android:id="@+id/activity_repo_google_drive_link_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/screen_edge"
                        android:layout_marginLeft="@dimen/screen_edge"
                        android:text="@string/repo_google_drive_button_not_linked" />

                </LinearLayout>

                <!-- Input. -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_repo_google_drive_directory_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_content_areas"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/activity_repo_google_drive_directory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:hint="@string/fragment_repo_google_drive_directory_desc" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </ScrollView>

        <include layout="@layout/app_bar" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
