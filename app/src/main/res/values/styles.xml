        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="NoteFragmentListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge</item>
        <item name="android:layout_marginRight">@dimen/screen_edge</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NoteFragmentListItemSpinnerButton" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minWidth">@dimen/fragment_note_field_min_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padded_content_left_margin_from_icon</item>
        <!--<item name="android:layout_marginRight">@dimen/screen_edge</item>-->
        <item name="android:backgroundTint" tools:targetApi="lollipop">?attr/text_disabled_color</item>
    </style>

    <style name="BookItemInfoIcon">
        <item name="android:layout_width">?attr/item_book_info_icon_size</item>
        <item name="android:layout_height">?attr/item_book_info_icon_size</item>
        <!--<item name="android:paddingTop">1dp</item>-->

        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart" tools:targetApi="17">2dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">8dp</item>

    </style>

    <style name="HeadItemInfoIcon">
        <item name="android:layout_width">?attr/item_head_info_icon_size</item>
        <item name="android:layout_height">?attr/item_head_info_icon_size</item>
        <!--<item name="android:paddingTop">1dp</item>-->
    </style>

    <style name="ListView">
        <item name="android:clipToPadding">false</item>
        <item name="android:choiceMode">multipleChoice</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ListViewItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">@dimen/screen_edge</item>
        <item name="android:paddingRight">@dimen/screen_edge</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BigCenteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/screen_edge</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">?attr/text_secondary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">?attr/font_large</item>
    </style>

    <style name="ItemQuickMenuButton" parent="android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="WhatsNewVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="WhatsNewChange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginLeft">8dp</item>-->
    </style>


    <style name="QueryListView" parent="ListView">
        <item name="android:id">@android:id/list</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!--<item name="android:divider">@null</item>-->
        <!--<item name="android:dividerHeight">0dp</item>-->

        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

        <item name="menu_container">@+id/item_head_menu_container</item>
        <item name="menu_for_fling_right">0</item>
        <item name="menu_for_fling_left">2</item>
    </style>

    <style name="NavigationViewForDrawer">
        <item name="android:listDivider">@null</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
